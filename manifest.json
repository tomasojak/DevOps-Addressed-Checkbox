{
"manifest_version": 3,
"name": "Azure DevOps PR Checkboxes",
"version": "1.0",
"description": "Adds checkboxes to Azure DevOps PR comments",

"content_scripts": [
	{
	"matches": ["https://dev.azure.com/*/_git/*/pullrequest/*"],
	"js": ["contentScript.js"]
	}
],

"permissions": ["storage"],
"host_permissions": ["https://dev.azure.com/*"],

"icons": {
	"16": "icons/icon16.png",
	"48": "icons/icon48.png",
	"128": "icons/icon128.png"
},

"web_accessible_resources": [
	{
	"resources": ["checkboxTemplate.html"],
	"matches": ["https://dev.azure.com/*"]
	}
],

"action": {
	"default_icon": "icons/icon48.png",
	"default_title": "PR Checkboxes"
},

"browser_specific_settings": {
    "gecko": {
    "id": "devopsCheckbox@github.tomasojak",
    "strict_min_version": "91.0"
    }
}
}